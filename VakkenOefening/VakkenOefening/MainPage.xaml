<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VakkenOefening.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button
             Text="OverzichtVakkenStack"
             FontFamily="TitleFont"
             Clicked="GoToOverzichtVakkenStack"
             x:Name="VakkenStack"
             >
            </Button>
            <Button
             Text="OverzichtVakkenGrid"
             FontFamily="TitleFont"
             Clicked="GoToOverzichtVakkenGrid"
             x:Name="VakkenGrid"
             >
            </Button>
            <Button
             Text="OverzichtVakkenFlex"
             FontFamily="TitleFont"
             Clicked="GoToOverzichtVakkenFlex"
             x:Name="VakkenFlex"
             >
            </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
